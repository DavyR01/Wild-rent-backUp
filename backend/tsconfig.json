{
   "compilerOptions": {
      "target": "ES2020",
      "module": "ES6", // Valeur par d√©faut
      // "module": "ES6", // ou "ESNext"
      "lib": [
         "dom",
         "esnext.asynciterable"
      ],
      "skipLibCheck": true,
      "sourceMap": false,
      "outDir": "./dist",
      "removeComments": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      // "paths": {
		// 	"@entities": ["entities"],
		// 	"@inputs": ["inputs"],
		// 	"@resolvers": ["resolvers"]
		// }
      "paths": {
         "@/*": ["./src/*"]
       }
   },
   "exclude": [
      "node_modules"
   ],
   "include": [
      "./src/**/*.ts"
, "src/index.mts", "src/config/datasource.mts", "src/resolvers/index.mts", "src/resolvers/category.resolver.mts", "src/resolvers/checkout.resolver.mts", "src/resolvers/product.resolver.mts", "src/resolvers/user.resolver.mts", "src/entities/category.entity.mts", "src/entities/checkout.entity.mts", "src/entities/index.mts", "src/entities/product.entity.mts", "src/entities/user.entity.mts"   ]
}